@model CreateTrainerViewModel
@{
    ViewData["Title"] = "Create Trainer";
}

<div class="container mt-4">
    <header class="mb-4">
        <h3 class="text-primary-color">Add New Trainer</h3>
    </header>

    <form method="post" asp-action="CreateTrainer">

        <!-- Trainer Info -->
        <div class="section-header mb-3">
            <h5 class="text-primary fw-bold">Personal Information</h5>
            <hr class="mt-2">
        </div>
        <div class="row g-3">
            <div class="col-12 col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="DateOfBirth" class="form-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Gender" class="form-label">Gender</label>
                <select asp-for="Gender" name="Gender" class="form-select">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>

        </div>
        <div class="section-header mb-3 mt-4">
            <h5 class="text-primary fw-bold">Address Information</h5>
            <hr class="mt-2">
        </div>
        <div class="row g-3">

            <div class="col-12 col-md-6">
                <label asp-for="BuildingNumber" class="form-label"></label>
                <input asp-for="BuildingNumber" class="form-control" />
                <span asp-validation-for="BuildingNumber" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Street" class="form-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <!-- Professional Information -->
        <div class="section-header mb-3">
            <h5 class="text-primary fw-bold">Professional Information</h5>
            <hr class="mt-2">
        </div>
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label fw-semibold">
                    Specializations <span class="text-danger">*</span>
                </label>

                <div class="form-check">
                    <input asp-for="Specialization" class="form-check-input" type="radio" name="Specialization"
                           value="GeneralFitness" />
                    <label asp-for="Specialization" class="form-check-label">GeneralFitness</label>
                </div>
                <div class="form-check">
                    <input asp-for="Specialization" class="form-check-input" type="radio" name="Specialization" value="Yoga" />
                    <label asp-for="Specialization" class="form-check-label">Yoga</label>
                </div>
                <div class="form-check">
                    <input asp-for="Specialization" class="form-check-input" type="radio" name="Specialization" value="Boxing" />
                    <label asp-for="Specialization" class="form-check-label">Boxing</label>
                </div>
                <div class="form-check">
                    <input asp-for="Specialization" class="form-check-input" type="radio" name="Specialization" value="CrossFit" />
                    <label asp-for="Specialization" class="form-check-label">CrossFit</label>
                </div>
                
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
        </div>

        <footer class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-fill">Add</button>
        </footer>
    </form>

</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}