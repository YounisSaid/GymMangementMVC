@model MemberViewModel
@{
	ViewData["Title"] = "MemberDetails";
}

@* Assuming the view is strongly typed to a MemberDetailsViewModel or similar *@
@* e.g., @model YourAppName.ViewModels.MemberDetailsViewModel *@

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-details border-0 p-2 shadow">

                @* Profile Header (Photo and Name) *@
                <div class="card-body text-center">

                    <div class="text-center mt-3">
                    @if (!string.IsNullOrEmpty(Model.Photo))
                        {
                            
                        <img src="~/images/@Model.Photo"
                             alt="@Model.Name"
                             class="rounded-circle"
                             style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff; margin-bottom: 10px;" />
                        }
                        else
                        {
                            <img src="~/images/@Model.Photo"
                                 alt="Default Avatar"
                                 class="rounded-circle"
                                 style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff; margin-bottom: 10px;" />
                        }
                    </div>

                    @* Name and Plan *@
                    <h2 class="mb-1 text-primary-color">@Model.Name</h2>
                    <h4 class="mb-2 pb-1 border-bottom d-block">
                        @(Model.PlanName ?? "No Active Plans")
                    </h4>
                </div>

                @* Details Section *@
                <div class="card-body text-center">
                    <div class="mt-4 text-start">
                        <div class="row g-3">

                            @* 1. Email *@
                            <div class="col-12">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Email</small>
                                    <strong>@Model.Email</strong>
                                </div>
                            </div>

                            @* 2. Phone *@
                            <div class="col-12">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Phone</small>
                                    <strong>@Model.Phone</strong>
                                </div>
                            </div>

                            @* 3. Gender (col-6) *@
                            <div class="col-6">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Gender</small>
                                    <strong>@Model.Gender</strong>
                                </div>
                            </div>

                            @* 4. Date of Birth (col-6) *@
                            <div class="col-6">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Date of Birth</small>
                                    <strong>@Model.DateOfBirth</strong>
                                </div>
                            </div>

                            @* 5. Membership Details (Conditional) *@
                            @if (Model.PlanName != null)
                            {
                                @* Membership Start Date (col-6) *@
                                <div class="col-6">
                                    <div class="p-3 bg-light rounded">
                                        <small class="text-muted d-block mb-1">Membership Start Date</small>
                                        <strong>@Model.MembershipStartDate</strong>
                                    </div>
                                </div>

                                @* Membership End Date (col-6) *@
                                <div class="col-6">
                                    <div class="p-3 bg-light rounded">
                                        <small class="text-muted d-block mb-1">Membership End Date</small>
                                        <strong>@Model.MembershipEndDate</strong>
                                    </div>
                                </div>
                            }

                            @* 6. Address (col-12) *@
                            <div class="col-12">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Address</small>
                                    <strong>@Model.Address</strong>
                                </div>
                            </div>

                        </div> @* End row g-3 *@
                    </div> @* End mt-4 text-start *@
                </div> @* End card-body text-center *@
            </div> @* End card *@

            @* Back to List Button *@
            <div class="d-flex justify-content-between gap-2 px-3 pb-3">
                <a asp-controller="Member" asp-action="Index" class="btn btn-fill flex-fill">Back to List</a>
            </div>

        </div> @* End col-md-6 *@
    </div> @* End row justify-content-center *@
</div> @* End container *@
