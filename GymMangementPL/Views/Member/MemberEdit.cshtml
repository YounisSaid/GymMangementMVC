@model MemberToUpdateViewModel

@{
    ViewData["Title"] = "Member Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-details border-0 p-2 shadow">

                <!-- Edit Form -->
                <form asp-controller="Member" asp-action="MemberEdit" method="post" enctype="multipart/form-data">

                    <!-- Profile Header (Photo and Name) -->
                    <div class="card-body text-center">

                        <!-- Photo Display -->
                        <div class="text-center mt-3">

                            @if (!string.IsNullOrEmpty(Model.Photo))
                            {
                                <img id="photoPreview"
                                     src="~/images/members/@Model.Photo"
                                     alt="@Model.Name"
                                     class="rounded-circle"
                                     style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff; margin-bottom: 10px;" />
                            }
                            else
                            {
                                <img id="photoPreview"
                                     src="~/images/default-avatar.png"
                                     alt="Default Avatar"
                                     class="rounded-circle"
                                     style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff; margin-bottom: 10px;" />
                            }

                            <div class="mt-2">
                                <label for="PhotoFile" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-camera"></i> Edit Photo
                                </label>
                                <input asp-for="PhotoFile" id="PhotoFile" type="file" class="d-none" accept="image/*" />
                                <span asp-validation-for="PhotoFile" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Name Display -->
                        <h2 class="mb-1 text-primary-color">@Model.Name</h2>
                    </div>

                    <!-- Hidden Fields -->
                    <input asp-for="Name" hidden readonly />

                    <!-- Editable Fields -->
                    <div class="mt-4 text-start">
                        <div class="row g-3">

                            <!-- Email -->
                            <div class="col-12">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Email</small>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="col-6">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Phone</small>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Building Number -->
                            <div class="col-6">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Building Number</small>
                                    <input asp-for="BuildingNumber" class="form-control" />
                                    <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- City -->
                            <div class="col-6">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">City</small>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Street -->
                            <div class="col-6">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Street</small>
                                    <input asp-for="Street" class="form-control" />
                                    <span asp-validation-for="Street" class="text-danger"></span>
                                </div>
                            </div>

                        </div> <!-- End row -->
                    </div> <!-- End text-start -->
                    <!-- Footer Buttons -->
                    <div class="d-flex justify-content-between gap-2 mt-3 px-3 pb-3">
                        <a asp-controller="Member" asp-action="Index" class="btn btn-fill flex-fill">Back to List</a>
                        <button type="submit" class="btn btn-fill flex-fill">Done</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<!-- Preview Script -->
<script>
    document.getElementById("PhotoFile").addEventListener("change", function (e) {
        const file = e.target.files[0];
        if (!file) return;

        const reader = new FileReader();
        reader.onload = function (event) {
            document.getElementById("photoPreview").src = event.target.result;
        };
        reader.readAsDataURL(file);
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
