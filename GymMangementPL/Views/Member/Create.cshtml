@using GymMangementDAL.Entities.Enums
@model CreateMemberViewModel

@{
    ViewData["Title"] = "Create Member";
}

<header class="mb-4">
    <h3 class="text-primary-color">Add Member</h3>
</header>

@* Display the model-level validation message, if any *@
@Html.ValidationMessage("DataMissed", new { @class = "text-danger" })

<form method="post" asp-action="CreateMember">

    @* Step Navigation Tabs *@
    <ul class="nav nav-tabs mb-4" id="addMemberTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="member-tab" data-bs-toggle="tab" data-bs-target="#member-info" type="button" role="tab" aria-controls="member-info" aria-selected="true">Member Info</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="health-tab" data-bs-toggle="tab" data-bs-target="#health-info" type="button" role="tab" aria-controls="health-info" aria-selected="false">Health Data</button>
        </li>
    </ul>

    @* Tab content *@
    <div class="tab-content">

        @* ------------------ 1. Member Info Tab ------------------ *@
        <div class="tab-pane fade show active" id="member-info" role="tabpanel" aria-labelledby="member-tab">
            
            @* Personal Information Section *@
            <div class="section-header mb-3">
                <h5 class="text-primary fw-bold">Personal Information</h5>
                <hr class="mt-2" />
            </div>

            <div class="row g-3">
                @* Name *@
                <div class="col-12 col-md-6">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @* Email *@
                <div class="col-12 col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                @* Phone *@
                <div class="col-12 col-md-6">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                @* DateOfBirth *@
                <div class="col-12 col-md-6">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                @* Gender *@
                <div class="col-12 col-md-6">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-select">
                        <option value="">--- Select Gender ---</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div> @* End row g-3 (Personal Info) *@

            @* Address Information Section *@
            <div class="section-header mb-3 mt-4">
                <h5 class="text-primary fw-bold">Address Information</h5>
                <hr class="mt-2" />
            </div>

            <div class="row g-3">
                @* BuildingNumber *@
                <div class="col-12 col-md-6">
                    <label asp-for="BuildingNumber" class="form-label"></label>
                    <input asp-for="BuildingNumber" class="form-control" />
                    <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                </div>

                @* Street *@
                <div class="col-12 col-md-6">
                    <label asp-for="Street" class="form-label"></label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>

                @* City *@
                <div class="col-12 col-md-6">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div> @* End row g-3 (Address Info) *@

        </div> @* End tab-pane member-info *@

        @* ------------------ 2. Health Data Tab ------------------ *@
        <div class="tab-pane fade" id="health-info" role="tabpanel" aria-labelledby="health-tab">
            <div class="row g-3">
                @* HealthRecordViewModel.Height *@
                <div class="col-12 col-md-6">
                    <label asp-for="HealthRecordViewModel.Height" class="form-label"></label>
                    <input asp-for="HealthRecordViewModel.Height" class="form-control" />
                    <span asp-validation-for="HealthRecordViewModel.Height" class="text-danger"></span>
                </div>

                @* HealthRecordViewModel.Weight *@
                <div class="col-12 col-md-6">
                    <label asp-for="HealthRecordViewModel.Weight" class="form-label"></label>
                    <input asp-for="HealthRecordViewModel.Weight" class="form-control" />
                    <span asp-validation-for="HealthRecordViewModel.Weight" class="text-danger"></span>
                </div>

                @* HealthRecordViewModel.BloodType *@
                <div class="col-12 col-md-6">
                    <label asp-for="HealthRecordViewModel.BloodType" class="form-label"></label>
                    <select asp-for="HealthRecordViewModel.BloodType" class="form-select">
                        <option value="">--- Select ---</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                    </select>
                    <span asp-validation-for="HealthRecordViewModel.BloodType" class="text-danger"></span>
                </div>

                @* HealthRecordViewModel.Note *@
                <div class="col-12 col-md-6">
                    <label asp-for="HealthRecordViewModel.Note" class="form-label"></label>
                    <input asp-for="HealthRecordViewModel.Note" class="form-control" />
                    <span asp-validation-for="HealthRecordViewModel.Note" class="text-danger"></span>
                </div>
            </div> @* End row g-3 (Health Info) *@
        </div> @* End tab-pane health-info *@
    </div> @* End tab-content *@

    @* Footer (Buttons) *@
    <footer class="d-flex justify-content-end gap-3 mt-4">
        
        @* Back to List Button *@
        <a asp-controller="Member" asp-action="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i> Back to List
        </a>
        
        @* Submit Button *@
        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-plus-circle me-2"></i> Add
        </button>
    </footer>
</form>

@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}