@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/homepage-mobile.css" />
    <link rel="stylesheet" href="~/css/new-footer.css" />
}

<div class="row d-none d-md-flex align-items-center">
    <div class="col-md-7 col-lg-7">
        <div class="info mt-4">
            <header class="text-black-alternative">
                <h2 class="fw-bolder display-2 mb-4">
                    Your body can
                    <span class="text-primary-color">stand almost</span> anything
                </h2>
                <p class="mb-6">
                    It's your mind that needs convincing. Push past your limits,
                    stay <br />
                    committed, and watch as your body transform into powerhouse of
                    <br />
                    strength and resilience. Start your journey today & truly
                    capable of!
                </p>
            </header>

            <div class="stats-bar">
                <div class="row g-0">
                    <div class="col-4">
                        <div class="stat">
                            <span class="fw-bolder fs-5 d-block mb-1">@Model.TotalMembers</span>
                            <h3 class="fs-5 fw-normal">Total Members</h3>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat">
                            <span class="fw-bolder fs-5 d-block mb-1">@Model.ActiveMembers</span>
                            <h3 class="fs-5 fw-normal">Active Members</h3>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat">
                            <span class="fw-bolder fs-5 d-block mb-1">@Model.TotalTrainers</span>
                            <h3 class="fs-5 fw-normal">Trainers</h3>
                        </div>
                    </div>
                </div>
                <div class="row g-0">
                    <div class="col-4">
                        <div class="stat">
                            <span class="fw-bolder fs-5 d-block mb-1">@Model.UpcomingSessions</span>
                            <h3 class="fs-5 fw-normal">Upcoming Sessions</h3>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat">
                            <span class="fw-bolder fs-5 d-block mb-1">@Model.OngoingSessions</span>
                            <h3 class="fs-5 fw-normal">Ongoing Sessions</h3>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat">
                            <span class="fw-bolder fs-5 d-block mb-1">@Model.CompletedSessions</span>
                            <h3 class="fs-5 fw-normal">Completed Sessions</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="buttons my-4">
                <button class="get-started bg-primary-color text-white btn rounded-5 fw-medium px-3 py-2 me-5 border-2 border-primary-color">
                    Get Started
                </button>
                <button class="explore-more border-primary-color btn rounded-5 fw-medium px-3 py-2 border-2 text-primary-color fw-medium">
                    Explore More
                </button>
            </div>
        </div>
    </div>
    <div class="col-md-5 d-flex justify-content-center">
        <div class="character">
            <img src="~/images/Theo Vance.jpg" alt="Theo Vance" class="img-fluid" />
        </div>
    </div>
</div>

<div class="row d-flex d-md-none mt-3">
    <div class="col-12">
        <header class="text-black-alternative text-center">
            <h2 class="fw-bolder display-2 mb-4" id="mobile-hero-heading">
                Your body can
                <span class="text-primary-color">stand almost</span> anything
            </h2>
        </header>

        <div class="character text-center mb-4">
            <img src="~/images/Theo Vance.jpg" alt="Theo Vance" class="img-fluid" id="mobile-hero-image" />
        </div>

        <div class="info-text text-center mb-4">
            <p class="mb-3 fs-5">
                It's your mind that needs convincing. Push past your limits,
                stay committed, and watch as your body transform into powerhouse of
                strength and resilience. Start your journey today & truly
                capable of!
            </p>
        </div>

        <div class="stats-bar-mobile mb-4">
            <div class="row g-3">
                <div class="col-6">
                    <div class="stat-mobile">
                        <span class="fw-bolder fs-4 d-block">@Model.TotalMembers</span>
                        <h3 class="fs-6 fw-normal">Total Members</h3>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-mobile">
                        <span class="fw-bolder fs-4 d-block">@Model.ActiveMembers</span>
                        <h3 class="fs-6 fw-normal">Active Members</h3>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-mobile">
                        <span class="fw-bolder fs-4 d-block">@Model.TotalTrainers</span>
                        <h3 class="fs-6 fw-normal">Trainers</h3>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-mobile">
                        <span class="fw-bolder fs-4 d-block">@Model.UpcomingSessions</span>
                        <h3 class="fs-6 fw-normal">Upcoming Sessions</h3>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-mobile">
                        <span class="fw-bolder fs-4 d-block">@Model.OngoingSessions</span>
                        <h3 class="fs-6 fw-normal">Ongoing Sessions</h3>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-mobile">
                        <span class="fw-bolder fs-4 d-block">@Model.CompletedSessions</span>
                        <h3 class="fs-6 fw-normal">Completed Sessions</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="buttons my-4 d-flex flex-column align-items-center gap-3">
            <button class="get-started bg-primary-color text-white btn rounded-5 fw-medium px-4 py-2 border-2 border-primary-color w-100">
                Get Started
            </button>
            <button class="explore-more border-primary-color btn rounded-5 fw-medium px-4 py-2 border-2 text-primary-color fw-medium w-100">
                Explore More
            </button>
        </div>
    </div>
</div>


<main>
    <section class="about my-5 text-black-alternative">
        <div class="container">
            <div class="row g-5 justify-content-center align-items-center">

                <div class="col-12 col-lg-6">
                    <div class="characters position-relative about-characters-container">

                        <div class="image main-character-1">
                            <img class="img-fluid" src="~/images/about p1.jpg" alt="Person 1" />
                        </div>

                        <div class="image character-2 position-absolute d-none d-lg-block">
                            <img class="img-fluid" src="~/images/about p2.jpg" alt="Person 2" />
                        </div>

                        <div class="image character-3 position-absolute d-none d-lg-block">
                            <img class="img-fluid" src="~/images/about p3.jpg" alt="Person 3" />
                        </div>

                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="title d-flex justify-content-start align-items-start gap-2">
                        <img class="" src="~/images/dumbbell.jpg" alt="dumbbell icon" />
                        <h2 class="text-primary-color fs-5">About Us</h2>
                    </div>

                    <header>
                        <p class="fw-bolder display-6 mb-4">
                            EMPOWERING YOU TO ACHIEVE
                            <span class="text-primary-color">YOUR FITNESS</span> GOALS
                        </p>
                        <p class="text">
                            We believe fitness is more than just a workout—it's a
                            lifestyle. With top-of- the-line facilities, certified
                            trainers, and a supportive community, we're here to inspire
                            and guide you every step of the way.
                        </p>
                    </header>

                </div>
            </div>
        </div>
    </section>

    <section class="workout bg-dark py-5 text-white">
        <div class="container">
            <div class="title text-center mb-5">
                <h2 class="text-primary-color text-uppercase fs-5 mb-2">Workouts</h2>
                <p class="fw-bolder display-5 mb-4">
                    Transform Your Body with Our Dynamic Upcoming Workouts
                </p>
            </div>

            <div class="row row-cols-1 row-cols-md-3 gy-4 gx-md-4">
                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/workout 1.jpg" class="card-img-top" alt="Group Workout" />
                        <div class="card-footer bg-white">
                            <h5 class="card-title text-black-alternative text-uppercase fw-bolder">
                                group workout
                            </h5>
                            <a href="#" class="text-primary-color fw-medium">Explore</a>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/workout 2.jpg" class="card-img-top" alt="Personal Training" />
                        <div class="card-footer bg-white">
                            <h5 class="card-title text-black-alternative text-uppercase fw-bolder">
                                personal training
                            </h5>
                            <a href="#" class="text-primary-color fw-medium">Explore</a>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/workout 3.jpg" class="card-img-top" alt="Yoga Class" />
                        <div class="card-footer bg-white">
                            <h5 class="card-title text-black-alternative text-uppercase fw-bolder">
                                yoga class
                            </h5>
                            <a href="#" class="text-primary-color fw-medium">Explore</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="indicators d-flex justify-content-center gap-2 mt-5">
                <div class="indicator bg-secondary" style="width: 10px; height: 10px; border-radius: 50%;"></div>
                <div class="indicator active bg-primary-color" style="width: 10px; height: 10px; border-radius: 50%;"></div>
                <div class="indicator bg-secondary" style="width: 10px; height: 10px; border-radius: 50%;"></div>
                <div class="indicator bg-secondary" style="width: 10px; height: 10px; border-radius: 50%;"></div>
            </div>
        </div>
    </section>

    <section class="why-us my-5 text-black-alternative">
        <div class="container">
            <div class="row row-cols-1 row-cols-lg-2 g-5 align-items-center">
                <div class="col">
                    <div class="info">
                        <div class="title d-flex justify-content-start align-items-start gap-2">
                            <img class="" src="~/images/dumbbell.jpg" alt="dumbbell icon" />
                            <h2 class="text-primary-color fs-5">Why Us</h2>
                        </div>

                        <header>
                            <p class="fw-bolder display-5 mb-4">
                                Elevate fitness with<br />
                                <span class="text-primary-color">the best</span> way
                                possible
                            </p>
                            <p class="text">
                                We believe fitness is more than just a workout—it's a
                                lifestyle. With top-of- the-line facilities, certified
                                trainers, and a supportive community, we're here to inspire
                                and guide you every step of the way.
                            </p>
                        </header>

                        <ul class="featutes list-unstyled mt-6">
                            <li class="feature d-flex gap-4 align-items-center mb-4">
                                <div class="count fw-bolder fs-3 text-primary-color">01</div>
                                <div class="text">
                                    <h3 class="text-capitalize fw-bold">
                                        personalized fitness plans
                                    </h3>
                                    <p class="fs-18">
                                        We tailor every workout to fit your unique goals and
                                        fitness level ensuring that you make the most progress.
                                    </p>
                                </div>
                            </li>

                            <li class="feature d-flex gap-4 align-items-center mb-4">
                                <div class="count fw-bolder fs-3 text-primary-color">02</div>
                                <div class="text">
                                    <h3 class="text-capitalize fw-bold">
                                        certified and experienced trainers
                                    </h3>
                                    <p class="fs-18">
                                        Our team of experts provides professional guidance and
                                        motivation to keep you on track.
                                    </p>
                                </div>
                            </li>

                            <li class="feature d-flex gap-4 align-items-center">
                                <div class="count fw-bolder fs-3 text-primary-color">03</div>
                                <div class="text">
                                    <h3 class="text-capitalize fw-bold">
                                        supportive community environment
                                    </h3>
                                    <p class="fs-18">
                                        Join a network of motivated individuals who will help
                                        you stay inspired and committed to your fitness journey.
                                    </p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col d-none d-lg-block">
                    <div class="characters">
                        <div class="images position-relative d-flex justify-content-center align-items-center">
                            <img class="img-fluid" src="~/images/why us images.svg" alt="characters" />
                        </div>
                    </div>
                </div>
            </div>

            <footer class="footer-dark">
                <div class="container">
                    <div class="row gy-4">

                        <div class="col-lg-4 col-md-6">
                            <img src="~/images/logo.jpg" alt="Power Fitness Logo" class="footer-logo" />
                            <p class="footer-tagline">
                                Push harder, go further. Your fitness journey starts today!
                            </p>
                            <div class="social-icons">
                                <a href="#"><i class="bi bi-facebook"></i></a>
                                <a href="#"><i class="bi bi-instagram"></i></a>
                                <a href="#"><i class="bi bi-twitter-x"></i></a>
                                <a href="#"><i class="bi bi-youtube"></i></a>
                            </div>
                        </div>

                        <div class="col-lg-2 col-md-6">
                            <h5 class="footer-heading">Quick Links</h5>
                            <ul class="footer-links">
                                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a asp-controller="Member" asp-action="Index">Members</a></li>
                                <li><a asp-controller="Session" asp-action="Index">Session</a></li>
                                <li><a asp-controller="MemberShip" asp-action="Index">MemberShip</a></li>
                                <li><a asp-controller="Booking" asp-action="Index">Session Schedule</a></li>
                            </ul>
                        </div>

                       

                        <div class="col-lg-3 col-md-6">
                            <h5 class="footer-heading">Contact Us</h5>
                            <div class="contact-item">
                                <i class="bi bi-geo-alt-fill"></i>
                                <span>2715 Ash Dr. San Jose,<br>South Dakota 83475</span>
                            </div>
                            <div class="contact-item">
                                <i class="bi bi-telephone-fill"></i>
                                <span>+91 123 456 789</span>
                            </div>
                            <div class="contact-item">
                                <i class="bi bi-envelope-fill"></i>
                                <span>info@gmail.com</span>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="footer-copyright">
                                &copy; @DateTime.Now.Year Power Fitness. All Rights Reserved.
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
    </section>
</main>